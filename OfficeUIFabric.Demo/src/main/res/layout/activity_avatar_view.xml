<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/avatar_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/default_layout_margin"
    tools:context=".demos.AvatarFragment">

    <com.microsoft.officeuifabric.persona.AvatarView
        android:id="@+id/avatar_example_initials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_layout_margin"
        app:avatarSize="small" />

    <com.microsoft.officeuifabric.persona.AvatarView
        android:id="@+id/avatar_example_picasso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_layout_margin"
        app:avatarSize="medium" />

    <com.microsoft.officeuifabric.persona.AvatarView
        android:id="@+id/avatar_example_glide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_layout_margin"
        app:avatarSize="large" />

    <com.microsoft.officeuifabric.persona.AvatarView
        android:id="@+id/avatar_example_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_layout_margin"
        app:avatarSize="xlarge" />

</LinearLayout>