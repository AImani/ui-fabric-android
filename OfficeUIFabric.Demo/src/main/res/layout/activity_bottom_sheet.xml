<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/default_layout_margin"
    tools:context=".demos.BottomSheetActivity">

    <Button
        android:id="@+id/open_bottom_sheet_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bottom_sheet_button" />

    <Button
        android:id="@+id/open_bottom_sheet_with_double_line_items_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/uifabric_content_inset"
        android:text="@string/bottom_sheet_double_line_items_button" />

</LinearLayout>